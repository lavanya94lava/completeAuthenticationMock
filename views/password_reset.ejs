<h1 class="col-sm-4">
    Password Reset Form
</h1>
<%if(locals.user){%>
    <form action="/users/reset-password-signed-in" method = "POST">
        <div class="form-group">
            <div class="col-sm-4">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id = "inputPassword" class = "form-control" placeholder="password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label for="inputConfirmPassword">Confirm Password</label>
                <input type="password" name="confirm_password" id = "inputConfirmPassword" class = "form-control" placeholder="Confirm password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <button type = "submit" class="btn btn-primary"> Reset Password</button>        
            </div>
        </div>
        
    </form>

<%}else{%>
    <form action="/users/reset-password-action/<%= token%>" method = "POST">
        <div class="form-group">
            <div class="col-sm-4">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id = "inputPassword" class = "form-control" placeholder="password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label for="inputConfirmPassword">Confirm Password</label>
                <input type="password" name="confirm_password" id = "inputConfirmPassword" class = "form-control" placeholder="Confirm password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <button type = "submit" class="btn btn-primary"> Reset Password</button>        
            </div>
        </div>
        
    </form>    
<%}%>
